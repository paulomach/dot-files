[user]
    email = paulo.machado@canonical.com
    name = Paulo Machado
[alias]
    gr = log --graph --full-history --all --color --pretty=tformat:"%x1b[31m%h%x09%x1b[32m%d%x1b[0m%x20%s%x20%x1b[33m(%an)%x1b[0m"
    st = status
    ci = commit
    co = checkout
    br = branch
    up = pull
    ls = ls-files
    log = log --all
    fa = fetch --all
[core]
    pager = bat -p
[pull]
    rebase = false
[init]
    defaultBranch = master
[gitreview]
    username = paulomach
[branch]
    sort = -committerdate
[rerere]
    enabled = true
[tag]
    sort = version:refname
[push]
    autoSetupRemote = true
[log]
    data = local
[diff]
    guitool = kdiff3
[gpg]
    format = ssh
[commit]
    verbose = true
[blame]
    coloring = highlightRecent
[color "blame"]
    highlightRecent = 237, 20 month ago, 238, 19 month ago, 239, 18 month ago, 240, 17 month ago, 241, 16 month ago, 242, 15 month ago, 243, 14 month ago, 244, 13 month ago, 245, 12 month ago, 246, 11 month ago, 247, 10 month ago, 248, 9 month ago, 249, 8 month ago, 250, 7 month ago, 251, 6 month ago, 252, 5 month ago, 253, 4 month ago, 254, 3 month ago, 231, 2 month ago, 230, 1 month ago, 229, 3 weeks ago, 228, 2 weeks ago, 227, 1 week ago, 226
[gui]
    fontdiff = -family \"Fira Code\" -size 11 -weight normal -slant roman -underline 0 -overstrike 0
    tabsize = 4
    fontui = -family \"Noto Sans\" -size 10 -weight normal -slant roman -underline 0 -overstrike 0
